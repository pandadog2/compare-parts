<div class="p-8 pb-0 text-3xl font-bold" >
  検索結果
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 m-4">
  <% if @results.length != 0 %>
    <% @results.each do |result| %>
      <div class="col hide_area">
        <div class="card">
          <div>
            <i class="far fa-times-circle fa-pull-right fa-border hover:text-blue-400 cursor-pointer text-xl hide_btn"></i>
          </div>
          <div class="slider m-4">
            <% result.images.each do |image| %>
              <%= image_tag image.variant(resize: "400x400"), id: 'part_image' %>
            <% end %>
          </div>
          <div class="ml-4 mr-4">
            <div class="p-1 bg-gray-200 rounded-md">
              車種：<%= result.car_model.car_model_code %>
            </div>
            <div class="mt-2">
              部品名 ： <%= result.part_name.name %>
            </div>
            <div class="mt-2 p-1 bg-gray-200 rounded-md">
              品番 ： <%= result.product_number %>
            </div>
            <div class="mt-2">
              材質 ： <%= result.material.name %>
            </div>
            <div class="mt-2 p-1 bg-gray-200 rounded-md">
              板厚 ： <%= result.thickness %>mm
            </div>
            <div class="mt-2">
              質量 ： <%= result.weight %>g
            </div>
            <div class="mt-2 p-1 bg-gray-200 rounded-md">
              仕入先 ： <%= result.supplier.name %>
            </div>
          </div>
          <div class="grid justify-items-stretch">
            <button class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 m-2 px-2 rounded justify-self-center">
              <%= link_to "さらに詳しく", car_model_part_path(result.car_model.id, result.id) %>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    該当する部品はありません
  <% end %>
</div>

<div id="page_top">
  <a href="#"><i class="arrow fas fa-arrow-up text-3xl"></i></a>
</div>
