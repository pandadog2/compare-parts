<%= render "shared/header" %>
<div class="p-8 text-3xl font-bold" >
  検索結果
</div>

<div class="space-x-4 flex">
  <% if @results.length != 0 %>
    <% @results.each do |result| %>
      <div class="inline-block w-1/3 place-self-center">
        <div class="center">
          <i class="far fa-times-circle fa-2x fa-pull-right fa-border" id='hide-btn'></i>
        </div>
        <%= image_tag result.image.variant(resize: "400x400") %>
        <div class="p-1">
          <div class="p-1 bg-gray-200 rounded-md">
            車種：<%= result.car_model.car_model_code %>
          </div>
          <div class="mt-2">
            部品名 ： <%= result.part_name.name %>
          </div>
          <div class="mt-2 p-1 bg-gray-200 rounded-md">
            品番 ： <%= result.product_number %>
          </div>
          <div class="mt-2">
            材質 ： <%= result.material.name %>
          </div>
          <div class="mt-2 p-1 bg-gray-200 rounded-md">
            板厚 ： <%= result.thickness %>mm
          </div>
          <div class="mt-2">
            質量 ： <%= result.weight %>g
          </div>
          <div class="mt-2 p-1 bg-gray-200 rounded-md">
            仕入先 ： <%= result.supplier.name %>
          </div>
          <button class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 m-2 px-2 rounded">
            <%= link_to "さらに詳しく", car_model_part_path(result.car_model.id, result.id) %>
          </button>
        </div>
      </div>
    <% end %>
  <% else %>
    該当する部品はありません
  <% end %>
</div>
